[user]
  email = sascha@steinbiss.name
  name = Sascha Steinbiss
[gui]
[color]
  branch = auto
  diff = auto
  status = auto
	grep = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = /usr/bin/vim
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  today = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --after="yesterday" --abbrev-commit --
[push]
	default = matching
[github]
	user = satta
[ghi]
	token = !security find-internet-password -a satta -s github.com -l 'ghi token' -w
